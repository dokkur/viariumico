extends ../../layout/base_profile

block page-title
  title Profile

block header
  header.via-header
    .via-header-wrapper
      .clearfix
        .container
          .via-header-wrapper-logo
            a(href='/')
              img(src='/my_assets/images/logo.png')
          .via-header-wrapper-rightSide.via-header-wrapper-rightSide-profile
            .via-header-account
              span.via-header-account-name Konstantin
              a(href='/dashboard/profile').via-header-account-email 379avramchenko@gmail.com
            a(href='/dashboard/login').btn.via-btn-logout Logout
            .clear
          .mobileMenuTriger.via-header-wrapper-mobileMenuTriger
            span
            span
            span

          .mobileMenu.via-header-wrapper-mobileMenu
            .container
              .via-header-wrapper-mobileMenu-logo
                a(href='/')
                  img(src="/my_assets/images/logo.png")

              .via-header-wrapper-rightSide
                .mobileMenuTriger.via-header-wrapper-mobileMenuTriger.-open
                  span
